<%= form_for [:organizations ,@product], html: { multipart: true } do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :serial_number %>
    <%= f.text_field :serial_number, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>
    
  

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group" >  
    <%= f.label :category %>
    <%= select_tag "category_ids", options_from_collection_for_select(Category.all, "id", "name"),multiple: true, autofocus: true, class: "form-control" %>   
  </div>
  
  <div class="actions">
    <%= f.hidden_field :organization_id, value: @org_id %>
    <%= f.submit "Create" , class: "btn btn-primary"%>      
  </div>
<% end %>
