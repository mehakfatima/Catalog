<div class="container-fluid">  
  <div class="admin-content">
    <div id="notice" class="alert alert-success">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <strong>Success</strong> <%= notice %>.
    </div>
    
    <div class="row">    
      <div class="col-md-6 col-sm-6"><h2>ORGANIZATIONS</h2></div>
      <div class="col-md-6 col-sm-6 text-right">
        <div class="title-links">
          <%= link_to '<i class="fa fa-plus fa-fw"></i> Add New'.html_safe, new_organization_path, class: "btn btn-success btn-sm" %>
        </div>
      </div>
    </div>

    <hr class="margin-top-10">

    <div class="clear20"></div>

    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>          
            <th style="width:40%;">NAME</th>
            <th style="">EMAIL</th>
            <th class="text-center" style="width:20%;">ACTIONS</th>
          </tr>
        </thead>
        <tbody>
            
          <% if @organizations.size == 0 %>
            <tr>
              <td colspan="4">There is no organization in this section</td>
            </tr>
          <% else %>    
            <% @organizations.each do |organization| %>
             <tr>
               <td><%=  organization.name %></td>
               <td><%=  organization.email %></td>
               <td class="text-center actions">
                   <%= link_to '<i class="fa fa-cubes fa-lg"></i>'.html_safe, organization_products_path(organization) %>
                   <%= link_to '<i class="fa fa-pencil fa-lg"></i>'.html_safe, edit_organization_registration_path(organization) %>
                   <%= link_to '<i class="fa fa-trash fa-lg"></i>'.html_safe, organization, method: :delete, data: { confirm: 'Are you sure?' } %>
               </td>
             </tr>
           <% end %>
         <% end %>         
        </tbody>
      </table>
    </div>
  </div>
</div>