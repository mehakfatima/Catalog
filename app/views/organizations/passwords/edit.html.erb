<div class="container">
  <%= bootstrap_devise_error_messages! %>
</div>
<div class="container admin-boxes text-center">
  <div class="login-area">
    <a href="#"><img src="<%= asset_path('logo.png') %>" class="img-responsive center-block"></a>
    <div class="clear10"></div>

    <div class="login-box">

    <h3>CHANGE PASSWORD</h3>
    
    <div class="form-group">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, role: "form" , 'data-parsley-validate' => ''}) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
          <%= f.label :password %><br />
         <%= f.password_field :password, autocomplete: "off", class: "form-control" , required: true, 'data-parsley-required-message'=>"Please insert your password",
             id: "password", minlength: 8 ,'data-parsley-trigger' => 'blur'%>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" , id: "confirm_password", 'data-parsley-equalto'=>"#password",
            'data-parsley-trigger' => 'keyup','data-parsley-equalto-message'=>"Password doesnot match" %>
      </div>        

      <div class="clear"></div>        
      <%= f.submit t('.change_my_password', :default => 'Change my password'), class: "btn btn-success btn-block" %>
      <% end %>
    </div>
    <%= render "admins/shared/links" %>
  </div>  
  </div>
</div>
