<div class="container">
  <%= bootstrap_devise_error_messages! %>
</div>
<div class="container admin-boxes text-center">
  <div class="login-area">
    <a href="#"><img src="<%= asset_path('logo.png') %>" class="img-responsive center-block"></a>
    <div class="clear10"></div>

    <div class="login-box">

    <h3>FORGOT PASSWORD</h3>
    
    <div class="form-group">
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" ,'data-parsley-validate' => '' }) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "form-control" , required: true, 'data-parsley-trigger' => 'change', 'data-parsley-required-message'=>"Please insert your Email"%>
        </div>

        <div class="clear"></div>
        <%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: "btn btn-success btn-block" %>
      <% end %>
    </div>
    <%= render "admins/shared/links" %>
  </div>  
  </div>
</div>
