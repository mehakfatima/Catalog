<div class="container">  
  <%= bootstrap_devise_error_messages! %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= t('.sign_up', :default => "Sign up") %></h4>
    </div>
    <div class="panel-body">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" , 'data-parsley-validate' => ''}) do |f| %>
        <div class="form-group">
               
        <div class="form-group">
          <%= f.label "Full Name" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" , required: true, 'data-parsley-trigger' => 'blur' %>
        </div>
               
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "form-control" , required: true, 'data-parsley-trigger' => 'change'%>
        </div>
        <div class="form-group">
          <%= f.label :password %><br />
         <%= f.password_field :password, autocomplete: "off", class: "form-control" , required: true, id: 'pw', 'data-parsley-min'=>"8",'data-parsley-trigger' => 'blur'%>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" , required: true, 'data-parsley-min'=>"8" , 'parsley-equalto' => '#pw', 'data-parsley-trigger' => 'keyup'%>
        </div>  
        <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary" %>
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>

