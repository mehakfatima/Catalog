<div class="container">  
  <%= bootstrap_devise_error_messages! %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= t('.sign_up', :default => "RESEND CONFIRMATION INSTRUCTIONS") %></h4>
    </div>
    <div class="panel-body">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" , 'data-parsley-validate' => ''}) do |f| %>
        <div class="form-group">         
               
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "form-control" , required: true, 'data-parsley-trigger' => 'change', 'data-parsley-required-message'=>"Please insert your Email"%>
        </div>

      <%= f.submit t('.resend_confirmation_instructions', :default => 'Resend confirmation instructions'), class: "btn btn-primary" %>
      <% end %>
    </div>
    <%= render "users/shared/links" %>

  </div>  
  </div>
</div>
