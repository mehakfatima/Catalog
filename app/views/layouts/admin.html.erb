<!DOCTYPE html>
<html>
<head>
  <title>Catalog</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <link href='http://fonts.googleapis.com/css?family=Lato:400,700,900' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body  class="admin">
    
<% if admin_signed_in? %>      
  <div class="admin-header">
   <div class="admin-logo pull-left">
       <img src="/assets/logo-white.png" class="img-responsive">
   </div>
   <div class="admin-user pull-right text-right">  
       <i class="fa fa-user fa-fw"></i> <%= current_admin.email %>    
       <%= link_to '<i class="fa fa-sign-out fa-fw"></i> Sign out'.html_safe, logout_path, :method => :delete%>      
   </div>
  </div>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
       <%= link_to '<i class="fa fa-home fa-fw"></i>'.html_safe, admins_dashboard_index_path, class: "navbar-brand active"%>
        
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to 'ORGANIZATIONS', admins_organizations_path  %> </li>
          <li><%= link_to 'PRODUCTS' , products_path %></li>
          <li><%= link_to 'CATEGORIES', categories_path %> </li>

          <!--<li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">SETTINGS <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="account-settings.html">Account Settings</a></li>
              <li><a href="system-settings.html">System Settings</a></li>
            </ul>
          </li> -->
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>
  <% end %>
  <%= render 'layouts/messages' %>
  <%= yield %> 
    
    
  <footer>
    <div class="clear20"></div>
    <div class="copyright text-center">&copy; 2016 Catalog. All Rights Reserved.</div>
    <div class="clear20"></div>
  </footer>
</body>
</html>
