<%= form_for :product, :url => catalog_products_path, :html => {:method => :get, class: "form-inline"} do |f| %>

  <div class="form-group">
      <%= f.text_field :name,  class: "form-control inline width-auto input-sm", :placeholder => "Name" %>
    </div>


  <div class="form-group">
      <%= f.select("category_id", Category.all.collect {|p| [ p.name, p.id ] }, {  prompt: 'Select Category'  }, class: "form-control inline width-auto input-sm" )%>
  </div>

  <div class="form-group">
      <%=  f.select("organization_id", Organization.all.collect {|p| [ p.name, p.id ] }, {  prompt: 'Select Organization' }, class: "form-control inline width-auto input-sm" ) %>
  </div>

  <%= f.submit "Search", class: "btn btn-primary btn-sm" %>
    
<% end %>