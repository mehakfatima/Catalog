<div class="container-fluid">  
  <div class="admin-content">
    <%# if notice.present? %>
      <%#*<div id="notice" class="alert alert-success">%>
        <%#*<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>%>
        <%#*<strong>Success</strong> <%= notice >.%>
      <%#*</div>%>
    <%# end %>
    
    <div class="row">    
      <div class="col-md-6 col-sm-6"><h2>PRODUCTS</h2></div>
      <div class="col-md-6 col-sm-6 text-right">
        <div class="title-links">
          <%= link_to '<i class="fa fa-plus fa-fw"></i> Add New'.html_safe,  new_product_path, class: "btn btn-success btn-sm" %>
        </div>
      </div>
    </div>

    <hr class="margin-top-10">

    <div class="clear20"></div>

    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
             <th class="text-center" style="width:2%;">#</th>
            <th style="width:15%;">SERIAL</th>
            <th style="width:30%;">NAME</th>
            <th style="width:30%;">ORGANIZATION</th>
            <th class="text-center" style="width:20%;">ACTIONS</th>
          </tr>            
        </thead>
      <tbody>
       <% if @products.size == 0 %>
            <tr>
              <td colspan="4">There is no contact in this section</td>
            </tr>
          <% else %>  
            <% @products.each_with_index do |product, index| %>
              <tr>
                <td class="text-center"><%= index+1 %></td>
                <td><%=  product.serial_number %></td>
                <td><%=  product.name %></td>
                <td><%=  product.organization_name %></td>               
                <td class="text-center actions">
                   <%= link_to '<i class="fa fa-eye fa-lg"></i>'.html_safe, product %>
                   <%= link_to '<i class="fa fa-pencil fa-lg"></i>'.html_safe, edit_product_path(product) %>
                   <%= link_to '<i class="fa fa-trash fa-lg"></i>'.html_safe, product, method: :delete, data: { confirm: 'Are you sure?' } %>
               </td>
             </tr>
           <% end %>
         <% end %>         
        </tbody>
      </table>
    </div>
    <div class="text-center">
      <%= will_paginate @product, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>