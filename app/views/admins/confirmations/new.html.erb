<div class="container">
  <%= bootstrap_devise_error_messages! %>
</div>
<div class="container admin-boxes text-center">
  <div class="login-area">
    <a href="#"><img src="/assets/logo.png" class="img-responsive center-block"></a>
    <div class="clear10"></div>

    <div class="login-box">

    <h3>RESEND CONFIRMATION INSTRUCTIONS</h3>
    
    <div class="form-group">
    <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, role: "form" , 'data-parsley-validate' => ''}) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" , required: true, 'data-parsley-trigger' => 'change' %>
      </div>

      <%= f.submit t('.resend_confirmation_instructions', :default => 'Resend confirmation instructions'), class: "btn btn-success btn-block" %>
      <% end %>
    </div>
    <%= render "admins/shared/links" %>
  </div>  
  </div>
</div>
