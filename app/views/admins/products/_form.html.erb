<hr class="margin-top-10">
<div class="clear10"></div>
<%= form_for [:admins, @organization ,@product], html: { multipart: true , class: "form-horizontal"} do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissible">
      <h4><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>
      
      <ul>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-sm-2 control-label">Serial Number</label>
    <div class="col-sm-8">
      <%= f.text_field :serial_number, autofocus: true, class: "form-control" , required: true %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Product Name</label>
    <div class="col-sm-8">
      <%= f.text_field :name, autofocus: true, class: "form-control" , required: true %>
    </div>
  </div>

  <div class="form-group">
      <label class="col-sm-2 control-label">Category</label>
      <div class="col-sm-8">
          <%= select_tag "category_ids", options_from_collection_for_select(Category.all, "id", "name", @product.categories.map(&:id)), multiple: true, autofocus: true, class: "form-control chosen", :required => true %>   
        </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Images</label>
        <div class="col-sm-8">
          <% if @product.galleries.exists? %>
            <% @product.galleries.each do |gallery| %>
                <%= image_tag gallery.image.url(:thumb) , class: "img-responsive admin-product-img pull-right"%>
            <% end %>
          <% end %>
          <%= file_field_tag "images[]", type: :file,autofocus: true, multiple: true, class: "form-control width-auto" %>
        </div>
    </div>

  
  <div class="actions form-group">
    <%= f.hidden_field :organization_id, value: params[:organization_id] %>
    <div class="col-sm-offset-2 col-sm-8">
      <%= f.submit @product.new_record? ? 'CREATE PRODUCT' : 'UPDATE PRODUCT', class: "btn btn-success btn-sm" %>     
    </div>
  </div>
<% end %>
