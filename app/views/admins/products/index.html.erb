<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>Listing Products</h1>
  <br/>
  <br>

  <%= link_to 'New Productttttttt',  new_admins_organization_product_path, class:"btn btn-primary" %>
    <br/>
    <div class="table-responsive"> 
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th>Serial #</th>
          <th>Picture</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead> 
      <tbody>
       <% if @products.size == 0 %>
            <tr>
              <td colspan="4">There is no contact in this section</td>
            </tr>
          <% else %>  
            <% @products.each do |product| %>
              <tr>
                <td><%=  product.serial_number %></td>
                <td><%=  product.name %></td>                
                <td><%= image_tag product.image.url(:thumb) %></td>
                <td><%= link_to 'Show', admins_organization_product_path(@organization.id, product) %></td>
                <td><%= link_to 'Edit',  edit_admins_organization_product_path(@organization.id,product) %></td>
                <td><%= link_to 'Destroy', admins_organization_product_path(@organization.id,product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          <% end %>  
      </tbody>
    </table>
</div>