<div class="container">
  <p id="notice"><%= notice %></p>
  <h2>Listing Organizations</h2>
  <br/>
  <br/>
  <%= link_to 'New Organization', new_admins_organization_path, class: "btn btn-primary" %>
  <br/>
  <br/>
  <div class="table-responsive"> 
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email #</th>
          <th></th>
          <th colspan="2">Actions</th>
        </tr>
      </thead> 
      <tbody>
       <% if @organizations.size == 0 %>
            <tr>
              <td colspan="4">There is no organization in this section</td>
            </tr>
          <% else %>    
        <% @organizations.each do |organization| %>
          <tr>
              <%#debugger%>
            <td><%=  organization.name %></td>
            <td><%=  organization.email %></td>
            <td><%= link_to 'Products', admins_organization_products_path(organization),class: "btn btn-primary" %></td>
            <td><%= link_to 'Show', admins_organization_path(organization) , class: "btn btn-default"%></td>
            <td><%= link_to 'Edit', edit_admins_organization_path(organization),class: "btn btn-default" %></td>
            <td><%= link_to 'Destroy', admins_organization_path(organization), method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-default" %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>      
  </div>
</div>