<hr class="margin-top-10">
<div class="clear10"></div>
<%= form_for [:admins , @organization], html: { class: "form-horizontal" ,'data-parsley-validate' => ''} do |f| %>
  <% if @organization.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissible">
      <h4><%= pluralize(@organization.errors.count, "error") %> prohibited this organization from being saved:</h4>

      <ul>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
      <% @organization.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-sm-2 control-label">Organization Name</label>
    <div class="col-sm-8">
      <%= f.text_field :name, autofocus: true, class: "form-control", pattern: '/^[a-zA-Z ]*$/' , minlength: 5 ,'data-parsley-pattern-message'=>"Alphabets only",
              'data-parsley-required-message'=>"Please insert Organization Name" ,required: true, 'data-parsley-trigger' => 'blur' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Email</label>
    <div class="col-sm-8">
      <%= f.email_field :email, autofocus: true, class: "form-control" , required: true, 'data-parsley-trigger' => 'change', 'data-parsley-required-message'=>"Please insert Organization Email"%>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Password</label>
    <div class="col-sm-8">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" , required: true, 'data-parsley-required-message'=>"Please insert Organization Password",
             id: "password", minlength: 8 ,'data-parsley-trigger' => 'blur'%>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Confirm Password</label>
    <div class="col-sm-8">
       <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" , id: "confirm_password", 'data-parsley-equalto'=>"#password",
              'data-parsley-trigger' => 'keyup','data-parsley-equalto-message'=>"Password doesnot match" %>
    </div>
  </div>
  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= f.submit @organization.new_record? ? 'CREATE ORGANIZATION' : 'UPDATE ORGANIZATION', class: "btn btn-success btn-sm"%>     
    </div>
  </div>
<% end %>
