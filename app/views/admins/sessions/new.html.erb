<div class="container">
  <%= bootstrap_devise_error_messages! %>
</div>
<div class="container admin-boxes text-center">
  <div class="login-area">
    <a href="#"><img src="<%= asset_path('logo.png') %>" class="img-responsive center-block"></a>
    <div class="clear10"></div>
    <div class="login-box">
      <h3>LOGIN</h3>    
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" , 'data-parsley-validate' => ''}) do |f| %>        
        <div class="form-group">
          <%= f.label :email %>
          <i class="fa fa-user fa-fw"></i>
          <%= f.email_field :email, autofocus: true, class: "form-control" , required: true, 'data-parsley-trigger' => 'change' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <i class="fa fa-key fa-fw"></i>
          <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control", 'data-parsley-min'=>"8",'data-parsley-trigger' => 'blur' %>
        </div>
        <div class="checkbox inline">
          <% if devise_mapping.rememberable? %>        
            <label>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </label>        
         <% end %>
        </div>
        <div class="forgot-txt pull-right">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
          <%= link_to t(".forgot_your_password", :default => "Forgot Password?"), new_password_path(resource_name) , value: "validate"%><br />
          <% end -%>
        </div>    
      <div>
        <%= render "admins/shared/links" %>
      </div>
        <div class="clear10"></div>

        <%= f.submit  t('.sign_in', :default => "LOGIN"), class: "btn btn-success btn-block" %> 
      <% end %>
    </div> 
  </div>
 </div>